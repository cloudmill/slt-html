extends ../layouts/master

include ../components/breadcrumbs
include ../components/accordion
include ../components/nav
include ../components/select

block content
  .where-buy
    section.section.section--first
      .container 
        +breadcrumbs( page = "Где купить")
        .events-page__inner 
          h1
            |#[span.word-span #[span(data-aos='fade-up') Где купить]]
    section.section
      .container
        .where-buy__top

          +nav(items = ['Списком', 'На карте'] active = 0)

          //- select.where-buy__select(name="city")
          //-   option(value="") Город
          //-   option(value="") Город2
          //-   option(value="") Город3

          .section__selects
            .section__select(data-aos='fade-up') 
              +select(options = ['qwe', 'zxc', 'asd'] placeholder = 'Город')

        -
          const filters = [
            'Интернет-магазин',
            'Доставка',
            'Самовывоз со склада',
            'Услуги монтажа',
            'В продаже SLT AQUA ',
            'В продаже SLT BLOCKFIRE',
            'В продаже SLT PE-RT',
            'Сопутствующие товары',

            'Услуги монтажа',
            'В продаже SLT AQUA ',
            'В продаже SLT BLOCKFIRE',
            'В продаже SLT PE-RT',
            'Сопутствующие товары',
          ]

        .where-buy__filters

          .where-buy__filters-col#filters-container
            each item in filters
              .where-buy__filters-item.filter-btn(data-aos='fade-up')
                .button__text
                  span #{item}

          .where-buy__filters-col(data-aos='fade-up')

            +refresh-button.where-buy__filters-reset.reset-disabled
              |Очистить

        .where-buy-list
          - for (i=0;i<7;i++)
            .where-buy-list__item(data-aos='fade-up')
              +accordion-big