extends ../layouts/master

include ../components/breadcrumbs
include ../components/card
include ../components/modals

block content
  .catalog-page
    section.section.section--first
      .container 
        +breadcrumbs.breadcrumbs--noborder(items=['каталог'] page = "Инструменты")
        .spoiler(data-spoiler-color='tool' data-accordion='')
          .spoiler__button(data-accordion-button='')
            h1.spoiler__title
              |#[span.word-span #[span(data-aos='fade-up') Инструменты]]
            .spoiler__icon(data-aos='fade-up')
              +arrow-svg.spoiler__svg
          .spoiler__dropdown(data-accordion-dropdown='')
            ul.spoiler__list
              -
                var items = [
                  {class: 'aqua', text: 'SLT AQUA'},
                  {class: 'blockfire', text: 'SLT BLOCKFIRE'},
                  {class: 'pert', text: 'SLT  PE-RT'},
                ] 
              each item in items
                li.spoiler__item(class=item.class data-spoiler-item=item.class)
                  a.spoiler__link(href="#" data-link='') 
                    |#{item.text}
        .section__block 
          .filters 
            ul.filters__headings(data-aos='fade-up') 
              li.filters__headings-item.active 
                .filters__heading
                  |Все 
              each item in ['Ножницы для резки труб', 'Сварочные аппараты', 'Коплектующие',]
                li.filters__headings-item
                  a.filters__heading(href="#" data-link='')
                    |#{item}
        .section__block.catalog
          .catalog-page__grid 
            - for (i = 0; i < 16; i++)
              .aos(data-aos='fade-up')
                +card
          .catalog__wrapper
            .catalog__loader
  +catalog-modal