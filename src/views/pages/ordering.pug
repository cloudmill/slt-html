extends ../layouts/master

include ../components/breadcrumbs
include ../components/form-components

block content
  -
    var ddata = {
      inputs: [
        {type: 'text', placeholder: 'Имя*'},
        {type: 'mail', placeholder: 'E-mail*'},
      ]
    }
  .ordering-page
    section.section.section--first
      .container 
        +breadcrumbs(page = "Оформление заказа")
        .section__inner 
          h1 
            |#[span.word-span #[span(data-aos='fade-up') Оформление заказа]]
    section.section
      .container
        .ordering-page__row
          .ordering-page__col(data-aos='fade-up')
            .ordering-page__button 
              .button-wrapper.sticky
                +link-left.button--wide--mobile
                  |Редактировать заказ
          .ordering-page__col
            h5.ordering-page__heading(data-aos='fade-up')
              |Контактные данные
            form.form(action="/" data-parsley-validate data-aos='fade-up') 
              .form__container
                each item in ddata.inputs
                  .form__item
                    +input#input(type = item.type placeholder = item.placeholder required)
                .form__item
                  +input#input(type="tel" placeholder="Телефон*" data-tel-input required)
              .ordering-page__inner 
                h5.ordering-page__heading
                  |Контактные данные
                .ordering-page__grid 
                  .ordering-page__grid-item
                    h6.ordering-page__title 
                      |Проектирование
                    ul.ordering-page__list  
                      each item in ['Системы водоснабжения', 'Системы отопления', 'Системы пожаротушения',]
                        li.ordering-page__item 
                          +checkbox(text = item)
                  .ordering-page__grid-item
                    h6.ordering-page__title 
                      |Монтаж
                    ul.ordering-page__list  
                      each item in ['Системы водоснабжения', 'Системы отопления', 'Системы пожаротушения',]
                        li.ordering-page__item 
                          +checkbox(text = item)
                  .ordering-page__grid-item
                    ul.ordering-page__list  
                      li.ordering-page__item 
                        +checkbox(text = 'Доставка' data-checkbox-reveal='')
              .ordering-page__hidden(data-container-reveal='')
                .ordering-page__inner
                  .form__item 
                    +input(type = 'text' placeholder = 'Город*')
                  .form__item 
                    +input(type = 'text' placeholder = 'Адрес*')
              .ordering-page__inner
                .form__container
                  h5.ordering-page__heading 
                    |Дополнительная информация к заказу
                  +textarea#input(placeholder = 'Комментарий')
                .form__wrapper 
                  .form__row 
                    .form__col
                      +checkbox(id="checkbox" required="")
                    .form__col
                      .button-wrapper
                        +form-button
                          |Оформить заказ