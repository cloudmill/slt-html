mixin card 
  a.card(href="#" data-link='')
    .card__category 
      each item, i in ['Соединение', 'Холодное водоснабжение', 'Питьевая вода', 'Огонь',]
        .card__item.tooltip
          .use-icon.tooltip__icon 
            img(src=`assets/images/svg/catalog-item-${i+1}.svg`, alt="")
          .tooltip__container
            |#{item}
    .card__container
      if (attributes.img)
        img(src=attributes.img, alt="")
      else
        img(src="assets/images/card-1.webp", alt="")
    .card__bot 
      .card__title 
        |Крестовина SLT AQUA PP-R