              each item in ddata.bot
                a.accordion__bot-item(href="#")
                  .accordion__bot-container 
                    .accordion__bot-img 
                      img.accordion__bot-pic(src=`assets/images/${item.src}`, alt="")
                  .accordion__bot-text 
                    |#{item.text}

