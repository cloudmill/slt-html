include ./button-icon
include ./slider-buttons

mixin about-slider 
  .container
    .about-page__slider(data-about-slider='' data-aos='fade-up')
      .about-page__slider-top
        .about-page__slider-col
          .about-page__slider-bar
            .about-page__slider-progress(data-slider-progress='')
        .about-page__slider-col
          .about-page__slider-controls
            .slider-buttons.slider-buttons--default
              .slider-buttons__item 
                +button-icon-left.button-icon--blue(data-about-prev='')
              .slider-buttons__item 
                +button-icon.button-icon--blue(data-about-next='')
      .about-page__slider-desktop(data-slider-parent='')
        .swiper-container.swiper-container--visible.swiper-container--slide-width-auto.swiper-container--slide-height-max(data-slider-desktop='')
          .swiper-wrapper
            - for (j = 0; j < 2; j++) 
              - for (i = 0; i < 6; i++)
                .swiper-slide 
                  .about-page__slider-slide 
                    img.about-page__slider-img(src=`assets/images/about-slide-${i+1}.webp`, alt="")
            .swiper-slide 
              .about-page__slider-slide 
                img.about-page__slider-img(src=`assets/images/about-slide-${i+1}.webp`, alt="")
                .about-page__slider-button(data-fancy-button='video') 
                  +play-svg.about-page__slider-svg
      .about-page__slider-mobile 
        .swiper-container.swiper-container--visible.swiper-container--slide-width-auto.swiper-container--slide-height-max(data-slider-mobile='')
          .swiper-wrapper 
            .swiper-slide 
              .about-page__slider-slide 
                img.about-page__slider-img(src=`assets/images/about-slide-${i+1}.webp`, alt="")
                .about-page__slider-button(data-fancy-button='video') 
                  +play-svg.about-page__slider-svg
            - for (i = 0; i < 6; i++)
              .swiper-slide 
                .about-page__slider-slide 
                  img.about-page__slider-img(src=`assets/images/about-slide-${i+1}.webp`, alt="")

mixin about-bot 
