mixin link-left 
  a.button.button-animate(href="#" data-link='')&attributes(attributes)
    .button__icon.button__icon--left
      +btn-arrow-left.button__svg.arrow-blue
    .button__text
      span
        block

mixin link-right 
  a.button.button-animate(href="#" data-link='')&attributes(attributes)
    .button__text
      span
        block
    .button__icon
      +btn-arrow-right.button__svg.arrow-blue

mixin download-btn 
  a.button.button--download(href="#")&attributes(attributes)
    span.button__text
      span
        block
    .button__icon
      +download-svg.button__svg

mixin address-btn
  a.button.button-animate(href="#")&attributes(attributes)
    .button__icon
      +address-label.button__svg
    span.button__text
      span
        block

mixin form-button
  button.button.button--blue.button--wide--mobile&attributes(attributes)
    span.button__text
      span
        block
    .button__icon
      +btn-arrow-right.button__svg

mixin refresh-button 
  .button.button-animate&attributes(attributes)
    span.button__text
      span
        block
    .button__icon
      +refresh-svg.button__svg