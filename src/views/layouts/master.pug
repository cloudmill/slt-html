
block variables
  - var mainClass=''



include ../components/svg

include ../components/header
include ../components/footer

include ../components/grid-test
include ../components/buttons
include ../components/picture
include ../components/modals



doctype html

html(lang='ru')
  
  head
    meta(charset="utf-8")
    title= data.title
    meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")
    //- favicon
    link(rel="icon", type='image/png' href="assets/images/favicon_16x16.png" sizes='16x16')
    link(rel="icon", type='image/png' href="assets/images/favicon_32x32.png" sizes='32x32')
    link(rel="shortcut icon", href="assets/images/favicon.ico")
    //- IOS
    link(rel="apple-touch-icon", href="assets/images/svg/appletouch-icon.svg")
    //- opengraph
    meta(property='og:image' content='assets/images/opengraph.jpg')
  
  body.body.body--unvisible

    block loader
    
    .wrapper
      block variables
      block header
        +header

      main.main(class=mainClass)
        block content
        +call-modal
        +search-modal
        +response-modal(text = 'Спасибо, мы с вами свяжемся в ближайшее время' id = 'call-form')

      block footer
        +footer

      block grid-test
        +grid-test

    block scripts
